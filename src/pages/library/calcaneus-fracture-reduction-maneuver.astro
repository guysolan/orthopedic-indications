---
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import { Bone, ChevronLeft, ArrowRight, AlertCircle, Info } from "lucide-astro";
import { Image } from "astro:assets";

// Import images
import xRay from "../../assets/calcaneus-fracture-reduction-maneuver/x-ray.png";
import injury1 from "../../assets/calcaneus-fracture-reduction-maneuver/injury-1.png";
import injury2 from "../../assets/calcaneus-fracture-reduction-maneuver/injury-2.png";
import injury3 from "../../assets/calcaneus-fracture-reduction-maneuver/injury-3.png";
import injury4 from "../../assets/calcaneus-fracture-reduction-maneuver/injury-4.png";
import fix1 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-1-screw.png";
import fix2 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-2-screw-wire.png";
import fix3 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-3-screw-wire-down.png";
import fix4 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-4-screw-wire-turn.png";
import fix5 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-5-elevate-depression.png";
import fix6 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-6-push-lateral-wall.png";
import fix7 from "../../assets/calcaneus-fracture-reduction-maneuver/fix-7-screw-2.png";

const title =
    "Calcaneus Fracture Reduction Maneuver | Orthopedic Surgical Guide";
const description =
    "Learn about calcaneus fracture reduction techniques, including axial view interpretation, surgical approaches, and key anatomical considerations for successful fracture fixation.";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            /* Add to head section */
            :root {
                --gold: #dcb86f;
                --gold-light: #e5c999;
                --black: #090909;
            }
        </style>
    </head>
    <body class="bg-black min-h-screen text-white">
        <main class="mx-auto px-4 py-12 md:py-20 max-w-4xl">
            <!-- Navigation -->
            <nav class="mb-16">
                <a
                    href="/orthopedic-indications"
                    class="inline-flex items-center gap-2 text-[var(--gold)] hover:text-[var(--gold-light)] text-sm transition-colors"
                >
                    <ChevronLeft class="w-6 h-6" />
                    Back to Library
                </a>
            </nav>

            <!-- Header -->
            <header class="mb-12">
                <h1
                    class="mb-4 font-bold text-[var(--gold)] text-4xl md:text-5xl"
                >
                    Calcaneus Fracture Reduction Maneuver
                </h1>
                <div class="flex items-center gap-2 text-gray-400 text-sm">
                    <Bone class="w-6 h-6" />
                    <span>Orthopedic Surgical Guide</span>
                </div>
                <div class="mt-2 text-gray-500 text-sm italic">
                    By Dr. Jan Szatkowski and Dr. Nick Strasser, Foot and Ankle
                    Surgeons
                </div>
            </header>

            <div class="space-y-12">
                <!-- Overview -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <div class="flex items-start gap-3">
                        <Info class="mt-1 w-6 h-6 text-[var(--gold)]" />
                        <p class="text-gray-300 text-lg leading-relaxed">
                            This comprehensive guide walks through the process
                            of calcaneus fracture reduction, providing detailed
                            insights into axial view interpretation and surgical
                            approaches. Understanding these techniques is
                            crucial for successful fracture management and
                            optimal patient outcomes.
                        </p>
                    </div>
                </div>

                <!-- Initial Assessment -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Initial Radiographic Assessment
                    </h2>
                    <div class="relative aspect-[4/3]">
                        <Image
                            src={xRay}
                            alt="Calcaneus fracture X-ray showing key anatomical landmarks"
                            class="rounded-xl w-full h-full object-contain"
                        />
                    </div>
                </div>

                <!-- Anatomical Components -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Anatomical Components
                    </h2>
                    <ul class="space-y-6 text-gray-300 text-lg">
                        <li class="flex items-start gap-3">
                            <ArrowRight
                                class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                            />
                            <span
                                ><strong class="text-gray-200"
                                    >Lateral Wall:</strong
                                > This serves as the primary surgical approach location.
                                The lateral wall's integrity is crucial for maintaining
                                calcaneal width and providing stable fixation points.</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <ArrowRight
                                class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                            />
                            <span
                                ><strong class="text-gray-200"
                                    >Central Piece:</strong
                                > Represents the joint depression component in intra-articular
                                fractures. This fragment is key to restoring articular
                                congruity and preventing post-traumatic arthritis.</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <ArrowRight
                                class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                            />
                            <span
                                ><strong class="text-gray-200"
                                    >Sustentaculum:</strong
                                > The medial constant fragment maintains strong ligamentous
                                attachments. This piece typically remains intact
                                and serves as a reference point for reduction.</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <ArrowRight
                                class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                            />
                            <span
                                ><strong class="text-gray-200"
                                    >Tuberosity:</strong
                                > The posterior component commonly develops varus
                                deformity. Proper alignment of this segment is essential
                                for maintaining heel height and ankle function.</span
                            >
                        </li>
                    </ul>

                    <div
                        class="bg-[#1a1a1a] mt-8 p-6 border border-[var(--gold)]/20 rounded-xl"
                    >
                        <div class="flex items-start gap-3">
                            <AlertCircle
                                class="mt-1 w-6 h-6 text-[var(--gold)]"
                            />
                            <p class="text-gray-300 text-lg leading-relaxed">
                                <strong class="text-gray-200"
                                    >Critical Anatomical Consideration:</strong
                                ><br />
                                The neurovascular bundle, containing the FHL, FDL,
                                and tibial nerve, courses beneath the sustentaculum
                                tali. Careful attention must be paid to protect these
                                structures during reduction and fixation.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Video Section - Moved up for better flow -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Explainer Video
                    </h2>
                    <div class="relative pb-[56.25%] h-0">
                        <iframe
                            class="top-0 left-0 absolute rounded-xl w-full h-full"
                            src="https://www.youtube.com/embed/ticULM3jnyM"
                            title="Calcaneus Fracture Reduction Video"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>
                </div>

                <!-- Fracture Mechanism -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Understanding the Fracture Pattern
                    </h2>
                    <p class="mb-8 text-gray-300 text-lg leading-relaxed">
                        Calcaneus fractures follow a predictable pattern during
                        axial loading, typically seen in falls from height.
                        Understanding this sequence is crucial for reduction:
                    </p>

                    <div class="gap-8 grid md:grid-cols-2">
                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    1. Initial Impact
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    The talus drives downward, creating the
                                    primary fracture line through the posterior
                                    facet.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={injury1}
                                    alt="Initial fracture through posterior facet"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    2. Central Depression
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    The central articular fragment becomes
                                    depressed, compromising joint surface
                                    congruity.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={injury2}
                                    alt="Central depression of articular surface"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    3. Lateral Wall Blowout
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Continued force causes lateral wall
                                    expansion, potentially leading to peroneal
                                    tendon impingement.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={injury3}
                                    alt="Lateral wall blowout"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    4. Varus Deformity
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    The tuberosity fragment displaces into varus
                                    and shortens, affecting overall heel
                                    alignment.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={injury4}
                                    alt="Varus deformity of tuberosity"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Surgical Technique -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Step-by-Step Reduction Technique
                    </h2>
                    <p class="mb-8 text-gray-300 text-lg leading-relaxed">
                        The surgical reduction follows a methodical sequence to
                        restore normal calcaneal anatomy and function:
                    </p>

                    <div class="gap-8 grid md:grid-cols-2">
                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    1. Initial Fixation
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Place initial K-wire in the tuberosity
                                    fragment to establish control and provide
                                    leverage.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix1}
                                    alt="Initial K-wire placement"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    2. Height Restoration
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Manipulate K-wires to begin restoring
                                    calcaneal height and overall alignment.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix2}
                                    alt="Height restoration maneuver"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    3. Width Control
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Apply controlled compression to narrow the
                                    fracture and address lateral wall expansion.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix3}
                                    alt="Width reduction technique"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    4. Rotational Correction
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Use K-wires to correct rotational deformity
                                    and restore normal heel alignment.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix4}
                                    alt="Rotational alignment correction"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    5. Joint Surface Elevation
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Elevate the depressed articular fragment to
                                    restore joint congruity and prevent
                                    arthritis.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix5}
                                    alt="Joint surface restoration"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    6. Wall Reduction
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Complete the lateral wall reduction to
                                    prevent tendon impingement and restore
                                    normal width.
                                </p>
                            </div>
                            <div class="relative aspect-[4/3]">
                                <Image
                                    src={fix6}
                                    alt="Lateral wall reduction completion"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-4 md:col-span-2">
                            <div class="space-y-2">
                                <h3 class="font-semibold text-gray-200 text-xl">
                                    7. Definitive Fixation
                                </h3>
                                <p
                                    class="text-gray-300 text-lg leading-relaxed"
                                >
                                    Secure the reduction with final hardware
                                    placement, including the crucial
                                    sustentaculum screw.
                                </p>
                            </div>
                            <div
                                class="relative mx-auto max-w-2xl aspect-[4/3]"
                            >
                                <Image
                                    src={fix7}
                                    alt="Final hardware placement"
                                    class="bg-[#1a1a1a] rounded-xl w-full h-full object-contain"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bone Grafting -->
                <div class="bg-[#232323] p-8 rounded-2xl">
                    <h2 class="mb-6 font-bold text-[var(--gold)] text-2xl">
                        Bone Grafting Considerations
                    </h2>
                    <p class="mb-6 text-gray-300 text-lg leading-relaxed">
                        In cases of significant bone loss or articular surface
                        depression, bone grafting plays a crucial role in
                        maintaining reduction and providing structural support.
                        The choice of grafting material depends on several
                        factors including defect size and location.
                    </p>

                    <div
                        class="bg-[#1a1a1a] p-6 border border-[var(--gold)]/20 rounded-xl"
                    >
                        <h3
                            class="flex items-center gap-2 mb-4 font-semibold text-gray-200 text-xl"
                        >
                            <Bone class="w-5 h-5 text-[var(--gold)]" />
                            Grafting Options and Applications
                        </h3>
                        <ul class="space-y-6 text-gray-300 text-lg">
                            <li class="flex items-start gap-3">
                                <ArrowRight
                                    class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                                />
                                <span
                                    ><strong class="text-gray-200"
                                        >Cancellous Autograft:</strong
                                    >
                                    Harvested from the iliac crest or proximal tibia,
                                    provides excellent biological properties for
                                    healing and incorporation. Ideal for smaller
                                    defects requiring robust bone formation.</span
                                >
                            </li>
                            <li class="flex items-start gap-3">
                                <ArrowRight
                                    class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                                />
                                <span
                                    ><strong class="text-gray-200"
                                        >Synthetic Substitutes:</strong
                                    >
                                    Materials like Cerament offer the advantage of
                                    immediate structural support and controlled resorption.
                                    Particularly useful in larger defects where donor
                                    site morbidity is a concern.</span
                                >
                            </li>
                            <li class="flex items-start gap-3">
                                <ArrowRight
                                    class="mt-1.5 w-5 h-5 text-[var(--gold)]"
                                />
                                <span
                                    ><strong class="text-gray-200"
                                        >Structural Support:</strong
                                    >
                                    Critical for maintaining articular surface elevation
                                    and preventing collapse. The graft should be
                                    impacted firmly to provide immediate stability.</span
                                >
                            </li>
                        </ul>
                    </div>

                    <div
                        class="bg-[#1a1a1a] mt-6 p-4 border border-[var(--gold)]/20 rounded-xl"
                    >
                        <div class="flex items-start gap-3">
                            <AlertCircle
                                class="mt-1 w-6 h-6 text-[var(--gold)]"
                            />
                            <p class="text-gray-300 text-lg leading-relaxed">
                                <strong class="text-gray-200"
                                    >Technical Tip:</strong
                                > When using synthetic grafts, ensure adequate preparation
                                of the recipient site and careful impaction to maximize
                                surface contact and incorporation potential.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <Footer />
        </main>
    </body>
</html>
