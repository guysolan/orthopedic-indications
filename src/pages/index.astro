---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import orthopedicIndications from "../assets/orthopedic-indications.jpg";

const title = "Orthopedic Indications | Surgical Techniques Library";
const description =
	"Medical education for those in medical sales, focusing on orthopedic cases and management principles by Dr. Nicholas Strasser, MD.";

const articles = [
	{
		title: "Calcaneus Fracture Reduction Maneuver",
		status: "published",
		link: "/orthopedic-indications/library/calcaneus-fracture-reduction-maneuver",
	},
	{
		title: "Ankle Fractures - The bimalleolar ankle fracture with syndesmotic fixation",
		status: "coming-soon",
		link: "/orthopedic-indications/library/bimalleolar-ankle-fracture",
	},
	{
		title: "Distal tib/fib fractures - IM nailing tips and tricks",
		status: "coming-soon",
		link: "/orthopedic-indications/library/distal-tib-fib-fractures",
	},
	{
		title: "Insertional Achilles tendinosis: The Zadek Osteotomy",
		status: "coming-soon",
	},
	{
		title: "Fibular Nailing Part 1 - Orthopedic Indications",
		status: "coming-soon",
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			:root {
				--gold: #dcb86f;
				--gold-light: #e5c999;
				--black: #090909;
			}
		</style>
	</head>
	<body class="bg-black min-h-screen text-white">
		<main class="mx-auto px-4 py-12 md:py-20 max-w-4xl">
			<!-- Logo and Brief Intro -->
			<div class="mb-16 text-center">
				<div class="flex justify-center mb-8">
					<Image
						src={orthopedicIndications}
						alt="Orthopedic Indications Channel"
						class="rounded-full w-32 h-32"
					/>
				</div>
				<h1
					class="mb-6 font-bold text-[var(--gold)] text-3xl md:text-5xl"
				>
					Orthopedic Indications
				</h1>
				<p
					class="mx-auto mb-4 max-w-2xl text-gray-400 text-lg md:text-2xl"
				>
					Medical education for those in medical sales
				</p>
				<a
					href="/orthopedic-indications/about"
					class="inline-block text-[var(--gold)] hover:text-[var(--gold-light)] transition-colors"
				>
					By Dr. Nicholas Strasser, MD â†’
				</a>
			</div>

			<!-- Stats Section -->
			<div class="gap-8 grid grid-cols-2 md:grid-cols-4 mb-20">
				<div class="text-center">
					<p class="mb-2 font-bold text-[var(--gold)] text-4xl">85</p>
					<p class="text-gray-400">Videos</p>
				</div>
				<div class="text-center">
					<p class="mb-2 font-bold text-[var(--gold)] text-4xl">
						1.97K
					</p>
					<p class="text-gray-400">Subscribers</p>
				</div>
				<div class="text-center">
					<p class="mb-2 font-bold text-[var(--gold)] text-4xl">
						70K+
					</p>
					<p class="text-gray-400">Views</p>
				</div>
				<div class="text-center">
					<p class="mb-2 font-bold text-[var(--gold)] text-4xl">
						2023
					</p>
					<p class="text-gray-400">Est.</p>
				</div>
			</div>

			<!-- Library Section -->
			<div class="mb-20">
				<div class="mb-12 text-center">
					<h2
						class="mb-4 font-bold text-[var(--gold)] text-2xl md:text-3xl"
					>
						Surgical Techniques Library
					</h2>
					<p class="text-gray-400 text-lg">
						Step-by-step guides and principles for orthopedic
						procedures
					</p>
				</div>

				<div
					class="gap-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
				>
					{
						articles.map((article) =>
							article.status === "published" ? (
								<a
									href={article.link}
									class="block bg-[#232323] hover:bg-[#2a2a2a] p-6 border-[var(--gold)]/20 border-2 hover:border-[var(--gold)] rounded-xl h-full transition-all duration-300"
								>
									<div class="flex flex-col h-full">
										<h3 class="mb-auto font-semibold text-gray-200 text-lg line-clamp-3">
											{article.title}
										</h3>
										<div class="flex items-center gap-2 mt-4 text-[var(--gold)]">
											<span class="text-sm">
												Read Guide
											</span>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												class="w-4 h-4"
												viewBox="0 0 20 20"
												fill="currentColor"
											>
												<path
													fill-rule="evenodd"
													d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
													clip-rule="evenodd"
												/>
											</svg>
										</div>
									</div>
								</a>
							) : (
								<div class="block bg-[#1a1a1a] p-6 border-2 border-gray-800 rounded-xl h-full">
									<div class="flex flex-col h-full">
										<h3 class="mb-auto font-semibold text-gray-400 text-lg line-clamp-3">
											{article.title}
										</h3>
										<div class="mt-4">
											<span class="text-gray-600 text-sm uppercase tracking-wider">
												Coming Soon
											</span>
										</div>
									</div>
								</div>
							),
						)
					}
				</div>
			</div>

			<!-- Quick Links -->
			<div class="flex flex-wrap justify-center gap-4 mb-12">
				<a
					href="https://www.youtube.com/@OrthopedicIndications"
					class="bg-[var(--gold)] hover:bg-[var(--gold-light)] px-6 py-3 rounded-full font-semibold text-black transition-colors"
				>
					YouTube Channel
				</a>
				<a
					href="/orthopedic-indications/about"
					class="bg-[#232323] hover:bg-[var(--gold)] px-6 py-3 border border-[var(--gold)] rounded-full font-semibold text-[var(--gold)] hover:text-black transition-colors"
				>
					About Dr. Strasser
				</a>
			</div>

			<!-- Disclaimer -->
			<div class="mx-auto max-w-2xl text-gray-500 text-sm text-center">
				<p>
					<strong>Disclaimer:</strong> The content presented is for general
					informational purposes only and is not a substitute for professional
					medical advice, diagnosis, or treatment.
				</p>
			</div>

			<Footer />
		</main>
	</body>
</html>
