---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
import adiTouring from "../assets/adi-touring.png";
import hiking from "../assets/hiking.png";
import adi from "../assets/adi-2.png";
import boat from "../assets/boat.png";
import { itineraryItems } from "../content/itinerary";
import location from "../assets/location.png";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale=1"
		/>
		<style>
			:root {
				--accent: #10b981; /* Emerald-500 */
				--accent-dark: #065f46; /* Emerald-800 */
				--primary: #059669; /* Emerald-600 */
				--secondary: #34d399; /* Emerald-400 */
				--tertiary: #047857; /* Emerald-700 */
				--bg-color: #f8fafc; /* Slate-50 */
			}
			body {
				background-color: var(--bg-color);
				background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2310b981' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
			}
			.section-title {
				color: var(--accent-dark);
				position: relative;
				display: inline-block;
				margin-bottom: 1.5rem;
				font-family: 'Baloo 2', cursive;
			}
			.section-title::after {
				content: "";
				position: absolute;
				bottom: -0.5rem;
				left: 0;
				width: 100%;
				height: 0.25rem;
				background-color: var(--accent);
				border-radius: 9999px;
				opacity: 0.3;
			}
			.whatsapp-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background-color: #25D366;
				color: white;
				padding: 0.75rem 1.5rem;
				border-radius: 0.5rem;
				font-weight: 500;
				transition: all 0.2s;
				box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
			}
			.whatsapp-button:hover {
				background-color: #128C7E;
				transform: translateY(-2px);
				box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
			}
		</style>
	</head>
	<body>
		<!-- <Header /> -->
		<main class="space-y-16 mx-auto mt-0 px-4 pb-16 max-w-[1000px]">
			<!-- Hero Section - Minimal design inspired by Triply -->
			<section
				class="relative w-full overflow-hidden"
				style="height: 90vh; max-height: 80vh; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); width: 100vw;"
			>
				<Image
					src={location}
					alt="Twin Lakes in Rwanda"
					class="absolute inset-0 w-full h-full object-cover"
				/>
				
				<!-- Left side content area with subtle background -->
				<div class="left-0 absolute inset-y-0 flex items-end md:items-center bg-gradient-to-r from-black/40 to-transparent w-full md:w-1/2 lg:w-2/5">
					<div class="p-8 md:p-16 md:pt-16 max-w-md">
						<p class="mb-2 font-light text-amber-300/90 uppercase tracking-wider">Local Experience</p>
						
						<h1 class="mb-6 font-bold text-white text-3xl md:text-5xl lg:text-6xl md:text-nowrap">
							Twin Lakes<br>Tours Rwanda
						</h1>
						
							<a
						href="https://wa.me/250726606622?text=Hello%20Abiathar,%20I'm%20interested%20in%20booking%20a%20Twin%20Lakes%20Island%20Tour.%20Please%20provide%20more%20information."
						target="_blank"
						class="whatsapp-button"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="w-5 h-5"
							viewBox="0 0 24 24"
							fill="currentColor"
						>
							<path
								d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
							></path>
						</svg>
						<span>Book Tour</span>
					</a>
					</div>
				</div>
				
				<!-- Subtle overlay gradient for the right side -->
				<div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
				
			
			</section>

			<!-- Simple search bar section (optional) -->
			<section class="flex flex-wrap justify-between items-center gap-4 bg-white shadow-md px-6 py-4">
				<div class="flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-emerald-600" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
					</svg>
					<span class="font-medium">Twin Lakes, Rwanda</span>
				</div>
				
				<div class="flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-emerald-600" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
					</svg>
					<span class="font-medium">4-hour tour</span>
				</div>
				
				<div class="flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-emerald-600" viewBox="0 0 20 20" fill="currentColor">
						<path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
					</svg>
					<span class="font-medium">Local guide</span>
				</div>
				
				<a
					href="https://wa.me/250726606622?text=Hello%20Abiathar,%20I'm%20interested%20in%20booking%20a%20Twin%20Lakes%20Island%20Tour.%20Please%20provide%20more%20information."
					target="_blank"
					class="hidden md:block bg-emerald-600 hover:bg-emerald-700 px-4 py-2 rounded-md font-medium text-white transition-all"
				>
					Book Now
				</a>
			</section>

			<!-- Tour Highlights Section - With ID for scroll target -->
			<section id="tour-highlights" class="mt-16 pt-8">
				<h2 class="mb-8 text-3xl section-title">Tour Highlights</h2>

				<div class="gap-12 grid grid-cols-1 md:grid-cols-2">
					<!-- Scenic Boat Ride - No box, just image and text -->
					<div class="group">
						<div class="mb-4 rounded-lg overflow-hidden">
							<Image
								src={boat}
								alt="Boat Tour on Twin Lakes"
								class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
							/>
						</div>
						<h3 class="mb-2 font-semibold text-xl text-[var(--accent-dark)]">
							Scenic Lake Journey
						</h3>
						<p class="text-gray-700">
							Cruise across serene waters to reach our small,
							authentic island home. Experience the serenity
							of Twin Lakes from a local's perspective.
						</p>
					</div>

					<!-- Mountain Hike - No box, just image and text -->
					<div class="group">
						<div class="mb-4 rounded-lg overflow-hidden">
							<Image
								src={hiking}
								alt="Hiking on Batutsi Island"
								class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
							/>
						</div>
						<h3 class="mb-2 font-semibold text-xl text-[var(--accent-dark)]">
							Island Mountain Hike
						</h3>
						<p class="text-gray-700">
							Take a guided walk to panoramic viewpoints
							overlooking both lakes, with stories of island
							life shared by your local guide.
						</p>
					</div>

					<!-- Traditional Food - No box, just image and text -->
					<div class="group">
						<div class="bg-emerald-50/50 mb-4 rounded-lg overflow-hidden">
							<div class="flex justify-center items-center w-full h-64">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-16 h-16 text-emerald-400"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="1"
										d="M21 15.9999V7.9999C21 6.8954 20.1046 5.9999 19 5.9999H5C3.89543 5.9999 3 6.8954 3 7.9999V15.9999M21 15.9999L3 15.9999M21 15.9999C21 17.1045 20.1046 18 19 18H5C3.89543 18 3 17.1045 3 15.9999M12 12H12.01"
									></path>
								</svg>
							</div>
						</div>
						<h3 class="mb-2 font-semibold text-xl text-[var(--accent-dark)]">
							Family & Food Experience
						</h3>
						<p class="text-gray-700">
							Meet Abiathar's family and taste authentic local
							dishes prepared by island residents. Experience
							true Rwandan hospitality in our family home.
						</p>
					</div>

					<!-- Banana Beer Making - No box, just image and text -->
					<div class="group">
						<div class="bg-emerald-50/50 mb-4 rounded-lg overflow-hidden">
							<div class="flex justify-center items-center w-full h-64">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-16 h-16 text-emerald-400"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="1"
										d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
									></path>
								</svg>
							</div>
						</div>
						<h3 class="mb-2 font-semibold text-xl text-[var(--accent-dark)]">
							Traditional Brewing
						</h3>
						<p class="text-gray-700">
							Discover the ancient art of banana beer making,
							a tradition passed down through generations on
							our small island community.
						</p>
					</div>
				</div>
			</section>

			<!-- Introduction Section - More organic layout -->
			<section class="mt-16">
				<h2 class="mb-8 text-3xl section-title">Your Local Guide</h2>

				<div class="flex md:flex-row flex-col items-center gap-10">
					<div class="w-full md:w-1/3">
						<div
							class="shadow-lg mx-auto border-[var(--accent)] border-4 rounded-full w-48 h-48 overflow-hidden"
						>
							<Image
								src={adi}
								alt="Abiathar Ihimbazwe - Tour Guide"
								class="w-full h-full object-cover"
							/>
						</div>
					</div>
					<div class="w-full md:w-2/3">
						<div class="mb-4 guide-info">
							<h3
								class="font-semibold text-2xl text-[var(--accent-dark)]"
							>
								Abiathar Ihimbazwe
							</h3>
							<p class="text-[var(--tertiary)] text-lg">
								Native Islander & Cultural Expert
							</p>
						</div>

						<p class="mb-4 text-gray-700">
							Born and raised on Batutsi Island, Abiathar knows
							all 17 families (about 200 people) who call this
							island home. This intimate community offers an
							authentic glimpse into traditional Rwandan island
							life.
						</p>
						<p class="text-gray-700">
							With family still on the island, Abiathar provides a
							genuine local perspective you won't find in typical
							tourist experiences.
						</p>
					</div>
				</div>
			</section>

			<!-- Location Section - More integrated design -->
			<section class="mt-16">
				<h2 class="mb-8 text-3xl section-title">Location</h2>

				<div class="mb-8 w-full">
					<p class="text-gray-700 text-lg">
						Batutsi Island is located in the stunning Twin Lakes
						region (Lake Burera and Lake Ruhondo) near Ruhengeri,
						Rwanda. The island offers breathtaking views of the
						surrounding volcanic mountains and crystal-clear waters.
					</p>
				</div>

				<div class="gap-8 grid grid-cols-1 lg:grid-cols-[1fr,2fr]">
					<div class="flex flex-col gap-6">
						<div class="bg-emerald-50/50 p-6 border-[var(--accent)] rounded-lg">
							<div class="flex items-center gap-3 mb-3">
								<div
									class="flex justify-center items-center bg-[var(--accent)] rounded-full w-8 h-8 text-white"
								>
									<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
									</svg>
								</div>
								<h3 class="font-semibold text-lg">
									Meeting Point
								</h3>
							</div>
							<p class="text-gray-700">
								This is where you'll meet your guide before
								heading to the boat. Easy to find and accessible
								from Musanze.
							</p>
							<a
								href="https://maps.app.goo.gl/CNGRbBC524Lu6539A"
								target="_blank"
								class="inline-flex items-center gap-2 mt-3 text-[var(--tertiary)] hover:text-[var(--primary)] transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									viewBox="0 0 20 20"
									fill="currentColor"
								>
									<path
										fill-rule="evenodd"
										d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
										clip-rule="evenodd"></path>
								</svg>
								<span>Meeting Point Location</span>
							</a>
						</div>

						<div class="bg-emerald-50/50 p-6 border-[var(--tertiary)] rounded-lg">
							<div class="flex items-center gap-3 mb-3">
								<div
									class="flex justify-center items-center bg-[var(--tertiary)] rounded-full w-8 h-8 text-white"
								>
									<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
										<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
									</svg>
								</div>
								<h3 class="font-semibold text-lg">
									Twin Lakes Tours
								</h3>
							</div>
							<p class="text-gray-700">
								See photos, reviews and more details on our
								Google Business profile
							</p>
							<a
								href="https://maps.app.goo.gl/vY327YNLADa6gDds9"
								target="_blank"
								class="inline-flex items-center gap-2 mt-3 text-[var(--tertiary)] hover:text-[var(--primary)] transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="w-6 h-6"
									viewBox="0 0 20 20"
									fill="currentColor"
								>
									<path
										d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4zm3 1h6v4H7V5zm8 8v2h1v-2h-1zm-2-2H7v4h6v-4zm2 0h1v2h-1v-2zm1-2V7h-1v2h1zM5 7v2h1V7H5zm0 4h1v2H5v-2zm0 4h1v2H5v-2z"
									></path>
								</svg>
								<span>Twin Lakes Tours Rwanda</span>
							</a>
						</div>
					</div>

					<div class="rounded-lg h-[500px] overflow-hidden">
						<iframe
							src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15949.777929693358!2d29.75749315!3d-1.4734698!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x19dc5db0369e3173%3A0xeecb4143e7ce5935!2sTwin%20Lakes%20Tours%20Rwanda!5e0!3m2!1sen!2sus!4v1718559321123!5m2!1sen!2sus"
							width="100%"
							height="100%"
							style="border:0;"
							allowfullscreen=""
							loading="lazy"
							referrerpolicy="no-referrer-when-downgrade"
							title="Twin Lakes Rwanda Map"
							class="w-full h-full"></iframe>
					</div>
				</div>
			</section>

			<!-- Tour Itinerary Section - Timeline style without white boxes -->
			<section class="mt-16">
				<h2 class="mb-8 text-3xl section-title">Tour Itinerary</h2>
				
				<!-- Timeline container -->
				<div class="relative">
					<!-- Vertical timeline line -->
					<div class="top-0 bottom-0 left-8 absolute bg-gradient-to-b from-emerald-500 to-emerald-700 rounded-full w-0.5"></div>
					
					{
						itineraryItems.map((item) => (
							<div class="relative mb-12 pl-16">
								<!-- Timeline marker with number -->
								<div class="top-8 left-8 z-10 absolute flex justify-center items-center bg-emerald-100 shadow-md -ml-4 border-2 border-emerald-600 rounded-full w-8 h-8">
									<span class="font-bold text-emerald-800">{item.step}</span>
								</div>
								
								<div class="bg-emerald-50/30 backdrop-blur-sm p-5 border-emerald-500/30 rounded-lg">
									<div class="flex md:flex-row flex-col gap-6">
										<div class="w-full md:w-1/2">
											{item.image ? (
												<div
													class="rounded-lg overflow-hidden"
													style="aspect-ratio: 5/3;"
												>
													<Image
														src={item.image}
														alt={item.imageAlt}
														class="w-full h-full object-cover"
													/>
												</div>
											) : (
												<div class="flex justify-center items-center bg-emerald-50 rounded-lg h-full">
													<svg
														xmlns="http://www.w3.org/2000/svg"
														class="w-16 h-16 text-emerald-300"
														fill="none"
														viewBox="0 0 24 24"
														stroke="currentColor"
													>
														<path
															stroke-linecap="round"
															stroke-linejoin="round"
															stroke-width="1"
															d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
														/>
													</svg>
												</div>
											)}
										</div>

										<div class="w-full md:w-1/2">
											<div class="md:flex flex-col justify-between items-start mt-2 md:mt-0 mb-4">
												<div>
													<h3 class="font-semibold text-xl text-[var(--accent-dark)]">
														{item.title}
													</h3>
												</div>
												<span class="bg-emerald-100 px-3 py-1 pt-2 md:pt-0 rounded-full font-medium text-emerald-800 text-sm">
													{item.duration}
												</span>
											</div>

											<p class="text-gray-700">
												{item.description}
